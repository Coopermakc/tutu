<%= form_for(@carriage) do |form| %>
<%= render 'common/errors', resource: @carriage %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :carrige_number %>
  </div>

  <div class="field">
  <%= form.label "Добавить к поезду" %>
   <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= form.text_field :car_type, class: "form-control", placeholder: "Тип вагона" %>
  </div>

  <div class="field">
    <%= form.number_field :up_places, class: "form-control", placeholder: "Количество верхних мест" %>
  </div>

  <div class="field">
    <%= form.number_field :down_places, class: "form-control", placeholder: "Количество нижних мест" %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
