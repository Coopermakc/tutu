<p id="notice"><%= notice %></p>

<h1>Маршруты</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routs.each do |rout| %>
      <tr>
        <td><%= rout.title %></td>
        <td><%= link_to 'Показать', rout %></td>
        <td><%= link_to 'Редактировать', edit_rout_path(rout) %></td>
        <td><%= link_to 'Удалить', rout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать маршрут', new_rout_path %>