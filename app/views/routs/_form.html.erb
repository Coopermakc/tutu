<%= form_for(@rout) do |form| %>
<%= render 'common/errors', resource: @rout %>

   <div class="field">
    <%= form.text_field :title, class: "form-control", placeholder: "Название маршрута" %>
  </div>
  <div class="field">
    <%= form.label :railway_station_ids, "Список станций" %>
    <%= form.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>


  <div class="actions">
    <%= form.submit "#{ @rout.new_record? ? 'Cоздать' : 'Изменить' }"%>
  </div>
<% end %>