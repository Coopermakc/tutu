<%= form_for(@train) do |form| %>
<%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :train_number %>
   
    
  </div>

  <div class="field">
  <%= form.label "Текущая станция" %>
   <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

   <div class="field">
  <%= form.label "Маршрут" %>
   <%= form.collection_select :rout_id, Rout.all, :id, :title %>
  </div>  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
